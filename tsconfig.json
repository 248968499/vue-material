{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "docs/src/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "target": "esnext",
    "types": ["node", "jest"]
  },
  "include": [
    "docs/src/**/*.ts",
    "docs/src/**/*.vue",
    "node_modules/@vuematerial/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
